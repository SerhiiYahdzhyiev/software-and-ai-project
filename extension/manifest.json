{
  "manifest_version": 3,
  "name": "CodeGlass",
  "description": "Analyse highlighted code fragments.",
  "version": "0.0.1",
  "action": {
    "default_title": "CodeGlass",
    "default_popup": "pages/popup.html"
  },
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "content_scripts": [
    {
      "run_at" : "document_start",
      "css": ["css/index.css"],
      "js": [
        "constants.js",
        "popover.js",
        "content.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
